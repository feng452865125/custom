    -->
    ds.`id` as `ds_id`, ds.`name` as `ds_name`, ds.`remark` as `ds_remark`, ds.`img_url` as `ds_img_url`, 
    ds.`enabled` as `ds_enabled`, ds.`create_date` as `ds_create_date`, ds.`update_date` as `ds_update_date`, 
    ds.`expire_date` as `ds_expire_date`, ds.`level` as `ds_level`
  </sql>

  <select id="findDadaSeriesList" resultMap="BaseResultMap">
    SELECT ds.* FROM `dada_series` ds
    <where>
      1=1
      and ds.expire_date is null
      <if test="enabled != null">
        and ds.enabled = #{enabled}
      </if>
    </where>
    order by ds.level asc, ds.create_date desc
  </select>

  <select id="getDadaSeries" resultMap="BaseResultMap">
    SELECT ds.* FROM `dada_series` ds
    <where>
      1=1
      and ds.expire_date is null
      <if test="id != null">
        and ds.id = #{id}
      </if>
      <if test="enabled != null">
        and ds.enabled = #{enabled}
      </if>
      limit 1
    </where>
  </select>

</mapper>