<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.chunhe.custom.pc.mapper.AdvertisementMapper">
    <resultMap id="BaseResultMap" type="com.chunhe.custom.pc.model.Advertisement">
        <!--
          WARNING - @mbg.generated
        -->
        <id column="id" jdbcType="INTEGER" property="id"/>
        <result column="name" jdbcType="VARCHAR" property="name"/>
        <result column="remark" jdbcType="VARCHAR" property="remark"/>
        <result column="img_url" jdbcType="VARCHAR" property="imgUrl"/>
        <result column="jump_title_remark" jdbcType="VARCHAR" property="jumpTitleRemark" />
        <result column="jump_title_img_url" jdbcType="VARCHAR" property="jumpTitleImgUrl" />
        <result column="jump_content_remark" jdbcType="VARCHAR" property="jumpContentRemark" />
        <result column="jump_content_img_url" jdbcType="VARCHAR" property="jumpContentImgUrl" />
        <result column="enabled" jdbcType="BIT" property="enabled"/>
        <result column="create_date" jdbcType="TIMESTAMP" property="createDate"/>
        <result column="update_date" jdbcType="TIMESTAMP" property="updateDate"/>
        <result column="expire_date" jdbcType="TIMESTAMP" property="expireDate"/>
        <result column="jump_video_remark" jdbcType="VARCHAR" property="jumpVideoRemark" />
        <result column="jump_video_url" jdbcType="VARCHAR" property="jumpVideoUrl" />
    </resultMap>
    <sql id="Base_Column_List">
        <!--
          WARNING - @mbg.generated
        -->
        a.`id` as `a_id`, a.`name` as `a_name`, a.`remark` as `a_remark`, a.`img_url` as `a_img_url`,
        a.`jump_title_remark` as `a_jump_title_remark`, a.`jump_title_img_url` as `a_jump_title_img_url`,
        a.`jump_content_remark` as `a_jump_content_remark`, a.`jump_content_img_url` as `a_jump_content_img_url`,
        a.`enabled` as `a_enabled`, a.`create_date` as `a_create_date`, a.`update_date` as `a_update_date`,
        a.`expire_date` as `a_expire_date`, a.`jump_video_remark` as `a_jump_video_remark`, a.`jump_video_url` as `a_jump_video_url`
    </sql>

    <select id="findAdvertisementList" resultMap="BaseResultMap">
        SELECT ad.* FROM `advertisement` ad
        <where>
            1=1
            and ad.expire_date is null
            <if test="enabled != null">
                and ad.enabled = #{enabled}
            </if>
            order by ad.create_date desc
        </where>
    </select>

    <select id="getAdvertisement" resultMap="BaseResultMap">
        SELECT ad.* FROM `advertisement` ad
        <where>
            1=1
            and ad.expire_date is null
            <if test="id != null">
                and ad.id = #{id}
            </if>
            <if test="enabled != null">
                and ad.enabled = #{enabled}
            </if>
            limit 1
        </where>
    </select>

</mapper>